<!-- 
    Main Habit Tracker Page (EJS Template)
    This is the main view that displays the habit tracker interface
-->
<%- include('partials/header') %>

<!-- Main container for the habit tracker app -->
<div class="container">
    <!-- Header section -->
    <header>
        <h1>Habit Tracker</h1>
        <p class="subtitle">Build better habits, one day at a time</p>
    </header>

    <!-- Main content area -->
    <main>
        <!-- Form to add new habits -->
        <section class="add-habit-section">
            <h2>Add New Habit</h2>
            <form id="habit-form">
                <input 
                    type="text" 
                    id="habit-input" 
                    placeholder="Habit name (e.g., Drink water)"
                    required
                >
                <input 
                    type="text" 
                    id="habit-description" 
                    placeholder="Optional description"
                >
                <button type="submit">Add Habit</button>
            </form>
        </section>

        <!-- Display area for habit list -->
        <section class="habits-section">
            <h2>My Habits</h2>
            <div id="habits-container" class="habit-list">
                <!-- Habits will be dynamically added here by JavaScript -->
                <p style="text-align: center; color: #999;">Loading habits...</p>
            </div>
        </section>
    </main>

<%- include('partials/footer') %>
